{
    "rendezvous": {
        "host": "127.0.0.1",
        "port": 8080,
        "discover_interval": 60,
        "register_retry_attempts": 3,
        "register_backoff_base": 2,
        "ttl_warning_treshold": 60
    },

    "network": {
        "ack_timeout": 5,
        "connection_timeout": 60,
        "max_msg_size": 32768
    },

    "peer_connection": {
        "retry_attempts": 3,
        "backoff_base": 2
    },

    "message_router": {
        "max_retries": 2
    },

    "keepalive": {
        "ping_interval": 30,
        "max_ping_failures": 3
    },

    "logging": {
        "level": "INFO",
        "log_to_file": true,
        "file": "chatp2p.log"
    }
}